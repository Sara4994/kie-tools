{
  "name": "@kogito-tooling/desktop",
  "version": "0.2.10",
  "description": "",
  "license": "Apache-2.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/kiegroup/kogito-tooling.git"
  },
  "dependencies": {
    "@kogito-tooling/core-api": "0.2.10",
    "@kogito-tooling/kie-bc-editors": "0.2.10",
    "@kogito-tooling/microeditor-envelope": "0.2.10",
    "@kogito-tooling/microeditor-envelope-protocol": "0.2.10",
    "@patternfly/patternfly": "2.40.2",
    "@patternfly/react-core": "3.90.0",
    "@patternfly/react-icons": "3.14.7",
    "@types/react-router": "5.1.1",
    "@types/react-router-dom": "5.1.1",
    "react-router": "5.1.1",
    "react-router-dom": "5.1.1",
    "electron": "7.1.9"
  },
  "scripts": {
    "start": "electron dist",
    "rebuild": "electron-rebuild -f -w sqlite3",
    "lint": "tslint -c ../../tslint.json 'src/**/*.{ts,tsx,js,jsx}'",
    "test": "echo 'No tests to run.'",
    "init": "yarn -f",
    "build": "yarn run lint && yarn test && yarn run build:fast",
    "build:fast": "rm -rf dist out && webpack --mode development",
    "build:prod": "yarn run build --mode production --devtool none && electron-packager . \"Business Modeler Preview\" --platform=darwin,linux --arch=x64 --out=build --overwrite --icon=./build/icon.icns && electron-packager . \"Business Modeler Preview\" --platform=win32 --arch=x64 --out=build --overwrite --icon=./build/icon.ico"
  },
  "babel": {
    "presets": [
      "@babel/env",
      "@babel/react"
    ]
  },
  "devDependencies": {
    "electron-packager": "14.2.0",
    "electron-rebuild": "1.10.0"
  },
  "files": [
    "**/*",
    "build/icon.*"
  ]
}
